{
    "compilerOptions": {
        "jsx": "react-jsx",
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "strict": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        "baseUrl": "src",
        "outDir": "./dist",
        "types": ["vite/client"]
    },
    "include": [
        "."
    ],
    "exclude": [
        ".git",
        "**/node_modules/*",
        "dist",
        "pack"
    ]
}
